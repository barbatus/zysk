{
  "display": "cube",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "lib": ["ES2023"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2022",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": false,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["shared/*.ts", "reset.d.ts", "index.ts"],
  "exclude": ["node_modules"]
}
