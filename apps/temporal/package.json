    "@temporalio/worker": "^1.11.3",
    "@temporalio/workflow": "^1.11.3",
    "@upstash/ratelimit": "^2.0.5",
    "@upstash/redis": "^1.34.9",
    "@zysk/db": "workspace:*",
    "@zysk/services": "workspace:*",
    "axios": "^1.7.7",
    "date-fns": "^4.1.0",
    "dedent": "^1.6.0",
    "dotenv": "^16.4.5",
