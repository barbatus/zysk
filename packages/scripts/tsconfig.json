{
  "display": "db",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "lib": ["ES2023"],
    "module": "commonjs",
    "target": "ES2022",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "#/*": ["./*"]
    },
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
