{
  "name": "@zysk/db",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint . --ext .ts --color",
    "lint:fix": "pnpm lint --fix",
    "kysely-schema": "pnpm dlx dotenv-cli -e ../../apps/web/.env.development -- kysely-codegen --out-file src/generated/schema.ts",
    "generate": "pnpm dlx dotenv-cli -e ../../apps/web/.env.development -- drizzle-kit generate --name",
    "migrate": "pnpm dlx dotenv-cli -e ../../apps/web/.env.development -- drizzle-kit migrate"
  },
  "dependencies": {
    "drizzle-orm": "^0.33.0",
    "kysely": "^0.27.4",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@types/pg": "^8.11.10",
    "@zysk/eslint-config": "workspace:*",
    "@zysk/typescript-config": "workspace:*",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.24.2",
    "kysely-codegen": "^0.16.8",
    "kysely-ctl": "^0.9.0"
  }
}
